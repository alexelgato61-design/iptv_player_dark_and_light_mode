{
  "appId": "com.player13.desktop",
  "productName": "Player13",
  "directories": {
    "buildResources": "public",
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      "nsis",
      "portable"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility"
  }
}
